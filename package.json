{
  "name": "log-whisper",
  "private": true,
  "version": "1.0.0",
  "description": "LogWhisper - 强大的日志分析桌面工具",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "tauri dev",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/style.css --watch",
    "build:css:prod": "tailwindcss -i ./src/index.css -o ./src/style.css --minify",
    "tauri:build": "tauri build",
    "dist:win": "npm run build:css:prod && tauri build --target x86_64-pc-windows-msvc",
    "dist:mac": "npm run build:css:prod && tauri build --target universal-apple-darwin",
    "dist:linux": "npm run build:css:prod && tauri build --target x86_64-unknown-linux-gnu",
    "clean": "rm -rf dist/ node_modules/ src-tauri/target/",
    "test": "cd src-tauri && cargo test",
    "sync:port": "node scripts/update-tauri-port.cjs",
    "start:stable": "node scripts/start-stable.cjs",
    "dev:stable": "npm run build:css:prod && npm run dev & (sleep 3 && npm run sync:port && sleep 2 && tauri dev)"
  },
  "keywords": [
    "log",
    "analysis",
    "desktop",
    "tauri",
    "rust",
    "parser",
    "developer-tools",
    "logging"
  ],
  "author": {
    "name": "LogWhisper",
    "email": "zhaijian@lanhuyue.com"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "lucide-react": "^0.546.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/cli": "^1.5.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^4.5.0"
  }
}
