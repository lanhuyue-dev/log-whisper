{
  "build": {
    "beforeBuildCommand": "npm run build:css:prod && npx vite build",
    "beforeDevCommand": "npm run build:css:prod && npm run dev",
    "devPath": "http://localhost:1427",
    "distDir": "../dist"
  },
  "package": {
    "productName": "LogWhisper",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "com.logwhisper.app",
      "icon": []
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:3004 ws://localhost:3004;"
    },
    "windows": [
      {
        "title": "LogWhisper - 日志分析工具",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ]
  }
}